<UserControl x:Class="QuickLook.Plugin.GraphvizDotViewer.ImagePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:graphvizDotViewer="clr-namespace:QuickLook.Plugin.GraphvizDotViewer"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label x:Name="ErrorLabel" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <graphvizDotViewer:ZoomBorder ClipToBounds="True">
            <Image x:Name="ImageControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        </graphvizDotViewer:ZoomBorder>
    </Grid>
</UserControl>